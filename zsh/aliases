# shortcuts
alias ls='ls --color=auto'
alias l='ls -l'
alias la='l -a'

alias v='nvim'

alias r='rsync -avzPFF'

alias o='xdg-open'

#alias t='urxvt -cd $PWD & disown'

alias g='git'

alias yt='cclive'
alias z='zathura'

# python

alias py='python3'
alias py2='python2'
alias py3='python3'
alias ipy='ipython'
alias ipy2='ipython2'
alias ipy3='ipython3'

# hy

alias ihy="jupyter console --kernel calysto_hy"

alias aoeu='setxkbmap us && xmodmap ~/.Xmodmap'
alias asdf='setxkbmap us dvp && xmodmap ~/.Xmodmap'

alias dush='du -sh * | sort -h'

alias ssh_nohostkey='ssh -o UserKnownHostsFile=/dev/null'
alias ssh-copy-id_nohostkey='ssh-copy-id -o UserKnownHostsFile=/dev/null'

alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../.."

alias s='sudo'

mkcd () { mkdir "$*" && cd "$*" }

# tmux
alias t='tmux'
alias tn='tmux new -As'
alias tnd='tmux new -ADs'
alias ta='tmux att -t'
alias tad='tmux att -dt'
alias tls='tmux ls'

alias p="watch -- ping -c1 8.8.8.8"

alias ra=ranger

doforever () { while :; do $*; done }

# grep
alias igrep="grep -i"

# ansible
alias ap="ansible-playbook"

# portage related
alias eq="equery"
